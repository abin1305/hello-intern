    <!-- Real-time Counter Animation Script -->
    <script>
        // Animate counters on page load
        function animateCounter(elementId, targetValue, duration = 2000) {
            const element = document.getElementById(elementId);
            const startValue = 0;
            const increment = targetValue / (duration / 16);
            let currentValue = startValue;
            
            const timer = setInterval(() => {
                currentValue += increment;
                if (currentValue >= targetValue) {
                    currentValue = targetValue;
                    clearInterval(timer);
                }
                
                if (elementId.includes('Donations') || elementId.includes('dollarsRaised')) {
                    element.textContent = '$' + Math.floor(currentValue).toLocaleString();
                } else {
                    element.textContent = Math.floor(currentValue).toLocaleString();
                }
            }, 16);
        }
        
        // Start animations when page loads
        window.addEventListener('load', () => {
            animateCounter('totalDonations', 847293);
            animateCounter('livesImpacted', 12847);
            animateCounter('activeInterns', 1293);
            animateCounter('internsEmpowered', 1293);
            animateCounter('dollarsRaised', 847293);
            animateCounter('communitiesImpacted', 47);
            animateCounter('partnersJoined', 23);
        });
        
        // Add subtle pulse animation to impact counters
        setInterval(() => {
            const counters = document.querySelectorAll('.impact-counter');
            counters.forEach(counter => {
                counter.classList.add('animation-celebration');
                setTimeout(() => {
                    counter.classList.remove('animation-celebration');
                }, 500);
            });
        }, 5000);
    </script>
