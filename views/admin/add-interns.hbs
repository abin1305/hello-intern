<!-- Bootstrap HTML Version of the React AddProduct Component -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container py-5">
<form action="/admin/add-intern" method="POST" enctype="multipart/form-data">

    <!-- Product Image Upload -->
    <div class="mb-4">
      <label class="form-label fw-medium">intern Images</label>
      <div class="d-flex flex-wrap gap-3">
        <!-- Repeat for 4 upload inputs -->
        <div>
          <input class="form-control" type="file" name="images" accept="image/*">
        </div>
       
      </div>
    </div>

    <!-- Product Name -->
    <div class="mb-3">
      <label for="productName" class="form-label fw-medium"> Name</label>
      <input type="text" class="form-control" id="productName" name="name" placeholder="Type here" required>
    </div>

      <!-- Product Name -->
    <div class="mb-3">
      <label for="productName" class="form-label fw-medium"> leaderboard position</label>
      <input type="text" class="form-control" id="productName" name="position" placeholder="Type here" required>
    </div>

      <div class="row mb-4">
       <div class="col-md-4">
        <label for="price" class="form-label fw-medium">Rewards Raised</label>
        <input type="number" class="form-control" id="price" name="rewards" placeholder="0" required>
      </div>
      <div class="col-md-4">
        <label for="offerPrice" class="form-label fw-medium">First donation</label>
        <input type="number" class="form-control" id="offerPrice" name="donation" placeholder="0"required>
      </div>
       <div class="col-md-4">
        <label for="offerPrice" class="form-label fw-medium">Days active</label>
        <input type="number" class="form-control" id="offerPrice" name="active" placeholder="0"required>
      </div>
    </div>

    <!-- Product Description -->
   <div class="mb-3">
      <label for="productName" class="form-label fw-medium"> Reference</label>
      <input type="text" class="form-control" id="productName" name="reference" placeholder="Type here" required>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>

  </form>
</div>
