        // Copy referral code functionality
        function copyReferralCode() {
            const referralCode = 'SARAH-WATER-2025';
            navigator.clipboard.writeText(referralCode).then(() => {
                // Show success feedback
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.innerHTML = '<svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Copied!';
                button.classList.add('bg-secondary', 'hover:bg-secondary-700');
                button.classList.remove('bg-primary', 'hover:bg-primary-700');
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('bg-secondary', 'hover:bg-secondary-700');
                    button.classList.add('bg-primary', 'hover:bg-primary-700');
                }, 2000);
            });
        }

        // Animate progress bars on page load
        window.addEventListener('load', () => {
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 500);
            });
        });

        // Add celebration animation to milestone achievements
        function celebrateMilestone() {
            const milestoneCard = document.querySelector('.bg-secondary-50');
            if (milestoneCard) {
                milestoneCard.classList.add('animation-celebration');
                setTimeout(() => {
                    milestoneCard.classList.remove('animation-celebration');
                }, 500);
            }
        }

        // Simulate real-time notifications
        function addNotification(type, message, time) {
            const notificationContainer = document.querySelector('.space-y-4');
            const notification = document.createElement('div');
            
            let bgColor, iconColor, icon;
            switch(type) {
                case 'donation':
                    bgColor = 'bg-secondary-50';
                    iconColor = 'bg-secondary';
                    icon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>';
                    break;
                case 'achievement':
                    bgColor = 'bg-primary-50';
                    iconColor = 'bg-primary';
                    icon = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>';
                    break;
                default:
                    bgColor = 'bg-accent-50';
                    iconColor = 'bg-accent';
                    icon = '<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>';
            }
            
            notification.innerHTML = `
                <div class="flex items-start space-x-3 p-3 ${bgColor} rounded-lg">
                    <div class="w-8 h-8 ${iconColor} rounded-full flex items-center justify-center flex-shrink-0">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            ${icon}
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-text-primary">${message}</p>
                        <p class="text-xs text-text-secondary">${time}</p>
                    </div>
                </div>
            `;
            
            notificationContainer.insertBefore(notification, notificationContainer.firstChild);
            
            // Remove oldest notification if more than 5
            if (notificationContainer.children.length > 5) {
                notificationContainer.removeChild(notificationContainer.lastChild);
            }
        }

        // Update notification badge count
        function updateNotificationBadge(count) {
            const badge = document.querySelector('.absolute.-top-1.-right-1');
            if (badge) {
